{
    "name": "jitamin/jitamin",
    "type": "project",
    "description": "A web based project management system",
    "license": "MIT",
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "discard-changes": true
    },
    "require" : {
        "php" : ">=5.5.9",
        "ext-gd" : "*",
        "ext-mbstring" : "*",
        "ext-hash" : "*",
        "ext-openssl" : "*",
        "ext-json" : "*",
        "ext-ctype" : "*",
        "ext-filter" : "*",
        "ext-session" : "*",
        "pimple/pimple" : "3.0.2",
        "eluceo/ical": "0.10.1",
        "erusev/parsedown" : "1.6.0",
        "fguillot/json-rpc" : "1.2.1",
        "fguillot/picodb" : "1.0.14",
        "fguillot/picofeed": "0.1.24",
        "fguillot/simpleLogger" : "1.0.1",
        "fguillot/simple-validator" : "1.0.1",
        "fguillot/simple-queue" : "1.0.1",
        "nesbot/carbon": "~1.21",
        "paragonie/random_compat": "2.0.2",
        "christian-riesen/otp" : "^2.0",
        "swiftmailer/swiftmailer" : "5.4.5",
        "symfony/console" : "~3.1",
        "symfony/event-dispatcher" : "~3.1",
        "gregwar/captcha": "1.1.1",
        "robmorgan/phinx": "^0.6.5"
    },
    "require-dev" : {
        "phpdocumentor/reflection-docblock": "2.0.4",
        "block8/php-docblock-checker": "^1.0",
        "squizlabs/php_codesniffer": "~2.5",
        "symfony/yaml": "2.8.7",
        "symfony/stopwatch" : "2.6.13",
        "phpunit/phpunit" : "4.8.26",
        "phpunit/phpunit-selenium": "2.0.2",
        "friendsofphp/php-cs-fixer": "^1.11"
    },
    "autoload" : {
        "classmap" : ["app/"],
        "psr-4" : {
            "Jitamin\\" : "app/"
        },
        "files" : [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "php -r \"file_exists('config/config.php') || copy('config/config.default.php', 'config/config.php');\""
        ],
        "post-install-cmd": [
        ],
        "post-update-cmd": [
        ]
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
